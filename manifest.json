{
  "manifest_version": 3,
  "name": "TabBoost",
  "version": "1.0",
  "description": "通过快捷键提升你的标签页浏览体验",
  "permissions": [
    "activeTab",
    "storage",
    "commands",
    "notifications",
    "clipboardWrite",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "duplicate-tab": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "复制当前标签页"
    },
    "copy-url": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Shift+Ctrl+C"
      },
      "description": "复制当前标签页网址"
    }
  }
}
